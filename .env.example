# Server
PORT=8080

# Fly.io
FLY_API_TOKEN=your_fly_api_token_here
FLY_VMS_APP_NAME=aether-vms
FLY_REGION=sjc

# Base Image (optional, defaults to registry.fly.io/{FLY_APP_NAME}/base:latest)
# BASE_IMAGE=registry.fly.io/aether-vms/base:latest

# SSH Key (one of these is required)
SSH_PRIVATE_KEY_PATH=./.keys/aether_rsa
ENCRYPTION_MASTER_KEY=your_encryption_master_key_here
# SSH_PRIVATE_KEY=base64_encoded_private_key

# Idle Timeout (optional, defaults to 10 minutes)
# IDLE_TIMEOUT_MINUTES=10

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# Database (Supabase Postgres connection string)
DATABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres
